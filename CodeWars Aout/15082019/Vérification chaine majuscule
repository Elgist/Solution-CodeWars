// Vérification si la chaine de caractère est en majuscule (Kyu 8)

#include <stdbool.h>
#include <string.h>

bool is_uppercase(const char *source)
{
  // Création de la chaine en majuscule
  char *test = malloc(strlen(source));
  int letter = 0;
  //Alimentation de la chaine lettre par lettre
  while (letter < strlen(source))
  {
    test[letter] = toupper(source[letter]);
    letter++;
  }
  test[letter]='\0';

  // Comparaison des deux chaines avant renvoie de la valeur
  if (strcmp(test, source) == 0)
  return true;
  else
  return false;
}
